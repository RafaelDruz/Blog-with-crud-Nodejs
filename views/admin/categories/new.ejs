
<%- include ('../../partials/header.ejs') %>

<%- include ('../../partials/navbar.ejs') %>

<div class="creatCategory">
    <div class="card">
        <div class="card-header">
            <h2>Cadastro de categoria</h2>  
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/save"> 
                <input type="hidden" name="userId" value="<%= userIdauth %>">
                <label class="stylelabel">Título: </label>
                <input class="style" type="text" name="title" placeholder="Defina o título da categoria" required><br/>
                <div class="buttonFinal">
                    <label for="reseticon" class="icon"><img src="../../icon/update.png"></label>
                    <input id="reseticon"  type="reset" style="display:none;"><br/>
                </div> 
                <button class="btn btn-success">Cadastrar</button>
            </form> 
        </div> 
    </div>
</div>
